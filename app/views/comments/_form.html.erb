<%= form_for([@recipe, @comment]) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :comment_entry, class:"sr-only" %><br>
    <%= f.text_area :comment_entry, class: "form-control", placeholder: "Comment", rows: 5 %>
  </div>
  <% if user_signed_in? %>
  <div class="cant-see-me">
    <%= f.number_field :recipe_id, value: @recipe.id %>
    <%= f.number_field :user_id, value: current_user.id %>
  </div>
  <% end %>

  <div class="field form-group">
   <div class="col-md-4">

<%= f.label "Rate this recipe" %>
<%= f.check_box :rating1 %>
<%= f.check_box :rating2 %>
<%= f.check_box :rating3 %>
<%= f.check_box :rating4 %>
<%= f.check_box :rating5 %>
</div>
</div>
<div class="actions">
  <%= f.submit %>
</div>

<% end %>
